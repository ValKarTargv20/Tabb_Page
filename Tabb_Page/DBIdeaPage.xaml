<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:tabb_page="clr-namespace:Tabb_Page" 
             x:Class="Tabb_Page.DBIdeaPage">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="{Binding Photo}"/>
            <Label Text="Idea:"/>
            <Entry Text="{Binding IName}"/>
            <Label Text="Notes:"/>
            <Entry Text="{Binding INote}"/>
            <StackLayout Orientation="Horizontal">
                <Button Text="Save Idea" Clicked="Save_Clicked" BackgroundColor="Cyan"/>
                <Button Text="Delete Idea" Clicked="Delete_Clicked" BackgroundColor="Cyan"/>
                <Button Text="Cancel" Clicked="Cancel" BackgroundColor="Cyan"/>
            </StackLayout>
            <StackLayout Orientation="Vertical">
                <Button Text="Get Picture from your Phone" Clicked="Button_Clicked_2" BackgroundColor="Cyan"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>